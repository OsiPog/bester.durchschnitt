{
	"manifest_version": 2,
	"name": "BSdurchschnitt",
	"version": "1.0.1",
	
	"content_scripts": [
		{
			"matches": ["https://beste.schule/*"],
			"js": ["/content_script.js"]
		}
	],
	
	"browser_action": {
		"browser_style": true,
		"default_icon":{
			"48": "/icon.png"
		},
		"default_title": "BSdurchschnitt",
		"default_popup": "/popup.html"
	},
	
	"permissions": [
		"storage"
	]
}

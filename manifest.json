{
	"manifest_version": 2,
	"name": "bester.durchschnitt",
	"version": "1.3.1",
	
	"content_scripts": [
		{
			"matches": [
				"https://beste.schule/*",
				"https://einfache.schule/*"
			],
			"js": [
				"/main.js",
				"/custom_elements.js",
				"/utils.js",
				"/config_loader.js"
			]
		}
	],
	
	"browser_action": {
		"browser_style": true,
		"default_icon":{
			"48": "/icon48.png"
		},
		"default_title": "bester.durchschnitt",
		"default_popup": "/popup.html"
	},
	
	"icons": { 
		"16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png",
        "256": "icon256.png" 
	},
	
	"permissions": [
		"storage"
	],
	
	"browser_specific_settings": {
		"gecko": {
			"update_url": "https://osipog.github.io/bester.durchschnitt/updates.json"
	 }
}
}

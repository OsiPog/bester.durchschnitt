{
	"manifest_version": 3,
	"name": "bester.durchschnitt",
	"version": "1.3.3",
	
	"content_scripts": [
		{
			"matches": [
				"https://beste.schule/*",
				"https://einfache.schule/*"
			],
			"js": [
				"script/main.js",
				"script/utils.js",
				"script/config_loader.js",
				"script/custom_elements.js"
			]
		}
	],
	
	"action": {
		"browser_style": true,
		"default_icon":{
			"48": "icon/icon48.png"
		},
		"default_title": "bester.durchschnitt",
		"default_popup": "/popup.html"
	},
	
	"icons": {
		"16": "icon/icon16.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png",
		"256": "icon/icon256.png"
	}
}
